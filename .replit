modules = ["nodejs-18", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Start"

[[workflows.workflow]]
name = "Build"
author = 43391426
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "Start"
author = 43396025
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
